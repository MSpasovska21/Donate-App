<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#6A79A6" />
            <gradient android:angle="-90" android:startColor="#B23580" android:endColor="#6A79A6"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#B23580" />
            <solid android:color="#7FA0BA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#B23580" />
            <gradient android:angle="-90" android:startColor="#B23580" android:endColor="#6A79A6" />
        </shape>
    </item>
</selector>