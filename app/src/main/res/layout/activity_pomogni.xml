<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PomogniActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewVolontiraj"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/volontiraj" />

        <Button
            android:id="@+id/btnVolontiraj"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/imageViewVolontiraj"
            android:background="@drawable/mybutton"
            android:text="Волонтирај"
            android:textColor="#fff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageViewPlatiSmetka"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_below="@+id/imageViewVolontiraj"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/platismetka" />

        <Button
            android:id="@+id/buttonPlatiSmetka"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewVolontiraj"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="20dp"
            android:layout_toStartOf="@+id/imageViewPlatiSmetka"
            android:text="Плати сметка"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/mybutton"/>


    </RelativeLayout>

</ScrollView>