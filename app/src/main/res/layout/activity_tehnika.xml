<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OblekaActivity"
    android:background="@drawable/mybackground"
    android:id="@+id/parent_Tehnika">

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/txtViewKontaktirajNe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Техника"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/txtViewTekst"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingTop="60dp"
        android:paddingRight="20dp"
        android:text="Направете простор за нови спомени. Мебелот, канцелариските материјали или опремата која не ја користите подарете ја на најпогодените."
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtViewTekst"
            android:columnCount="1"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:id="@+id/card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imgTehnikaCard1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/logo_tehnika_card1"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/txtTehnikaOpisCard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Борче Стаменов им донесе среќа на многу семејства во изминатите 4 години. Тој е основач на „Донирај компјутер“ - иницијатива која преку поправка на веќе користени компјутери обезбедува компјутер за деца и семејства кој не можат да си го дозволат тоа."
                        android:layout_below="@id/imgTehnikaCard1"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/txtTehnikaObjavaCard1"
                        android:layout_width="120dp"
                        android:layout_below="@+id/txtTehnikaOpisCard1"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="wrap_content"
                        android:text="Објавено од: Донирај Компјутер Борче Стаменов"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:textAlignment="center"/>

                    <Button
                        android:id="@+id/btnKontaktCardTehnika1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtTehnikaOpisCard1"
                        android:layout_toEndOf="@id/txtTehnikaObjavaCard1"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="30dp"
                        android:text="Контакт"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:background="@drawable/mybutton"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>


    </ScrollView>


</RelativeLayout>