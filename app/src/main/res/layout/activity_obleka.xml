<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OblekaActivity"
    android:background="@drawable/mybackground"
    android:id="@+id/parent_Obleka">

    <TextView
        android:paddingTop="20dp"
        android:id="@+id/txtViewKontaktirajNe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Облека"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/txtViewTekst"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingTop="60dp"
        android:paddingRight="20dp"
        android:text="Сподели го твојот некогашен стил. Твојот стар дуксер, палто и маичка можат некому да бидат неопходното парче облека."
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"/>


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="170dp">


       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@+id/txtViewTekst"
           android:columnCount="1"
           android:rowCount="3">

           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_row="0"
               android:layout_rowWeight="1"
               android:layout_column="0"
               android:layout_columnWeight="1"
               android:layout_gravity="fill"
               android:layout_margin="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="10dp">

               <RelativeLayout
                   android:id="@+id/obleka_card1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:gravity="center"
                   android:orientation="vertical">
                   
                   
                   <ImageView
                       android:id="@+id/imgOblekaCard1"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:src="@drawable/logo_obleka_card1"
                       android:layout_centerHorizontal="true"/>

                   <TextView
                       android:id="@+id/txtOblekaOpisCard1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                       android:text="Помогнете во одржувањето на благосостојбата на најмладите социјално загрозените лица и семејства, преку донирање на облека и обувки кои се во добра состојба но, не ги користите. Направете промена денес."
                       android:layout_below="@id/imgOblekaCard1"
                       android:textColor="#000"
                       android:textStyle="bold"
                       android:textSize="20dp"
                       android:textAlignment="center"/>

                   <TextView
                       android:id="@+id/txtOblekaObjavaCard1"
                       android:layout_width="120dp"
                       android:layout_below="@+id/txtOblekaOpisCard1"
                        android:layout_marginStart="50dp"
                       android:layout_marginTop="20dp"
                       android:layout_marginBottom="30dp"
                       android:layout_marginEnd="20dp"
                       android:layout_height="wrap_content"
                       android:text="Објавено од: Здружение за заштита на правата на детето"
                       android:textColor="#000"
                       android:textSize="15dp"
                       android:textAlignment="center"/>

                   <Button
                       android:id="@+id/btnKontaktCardObleka1"
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/txtOblekaOpisCard1"
                       android:layout_toEndOf="@id/txtOblekaObjavaCard1"
                       android:layout_marginTop="40dp"
                       android:layout_marginStart="30dp"
                       android:text="Контакт"
                       android:textSize="20dp"
                       android:textColor="#fff"
                       android:background="@drawable/mybutton"/>

               </RelativeLayout>

           </androidx.cardview.widget.CardView>



           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_row="1"
               android:layout_rowWeight="1"
               android:layout_column="0"
               android:layout_columnWeight="1"
               android:layout_gravity="fill"
               android:layout_margin="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="10dp">

               <RelativeLayout
                   android:id="@+id/obleka_card2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:gravity="center"
                   android:orientation="vertical">


                   <ImageView
                       android:id="@+id/imgOblekaCard2"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:src="@drawable/logo_obleka_card2"
                       android:layout_centerHorizontal="true"/>

                   <TextView
                       android:id="@+id/txtOblekaOpisCard2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:text="Млади, невработени лица од Тетово имаат потреба од топла облека. Доколку можете да помогнете, стапете во контакт со Youth United Тетово."
                       android:layout_below="@id/imgOblekaCard2"
                       android:textColor="#000"
                       android:textStyle="bold"
                       android:textSize="20dp"
                       android:textAlignment="center"/>

                   <TextView
                       android:id="@+id/txtOblekaObjavaCard2"
                       android:layout_width="120dp"
                       android:layout_below="@+id/txtOblekaOpisCard2"
                       android:layout_marginStart="50dp"
                       android:layout_marginTop="20dp"
                       android:layout_marginBottom="30dp"
                       android:layout_marginEnd="20dp"
                       android:layout_height="wrap_content"
                       android:text="Објавено од: Youth United Tetovo"
                       android:textColor="#000"
                       android:textSize="15dp"
                       android:textAlignment="center"/>

                   <Button
                       android:id="@+id/btnKontaktCardObleka2"
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/txtOblekaOpisCard2"
                       android:layout_toEndOf="@id/txtOblekaObjavaCard2"
                       android:layout_marginTop="40dp"
                       android:layout_marginStart="30dp"
                       android:text="Контакт"
                       android:textSize="20dp"
                       android:textColor="#fff"
                       android:background="@drawable/mybutton"/>

               </RelativeLayout>

           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_row="2"
               android:layout_rowWeight="1"
               android:layout_column="0"
               android:layout_columnWeight="1"
               android:layout_gravity="fill"
               android:layout_margin="10dp"
               app:cardCornerRadius="10dp"
               app:cardElevation="10dp">

               <RelativeLayout
                   android:id="@+id/card3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:gravity="center"
                   android:orientation="vertical">


                   <ImageView
                       android:id="@+id/imgOblekaCard3"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:src="@drawable/logo_obleka_card3"
                       android:layout_centerHorizontal="true"/>

                   <TextView
                       android:id="@+id/txtOblekaOpisCard3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:text="Стопли нечие срце така што ќе донираш облека за социјално загрозени семејства."
                       android:layout_below="@id/imgOblekaCard3"
                       android:textColor="#000"
                       android:textStyle="bold"
                       android:textSize="20dp"
                       android:textAlignment="center"/>

                   <TextView
                       android:id="@+id/txtOblekaObjavaCard3"
                       android:layout_width="120dp"
                       android:layout_below="@+id/txtOblekaOpisCard3"
                       android:layout_marginStart="50dp"
                       android:layout_marginTop="20dp"
                       android:layout_marginBottom="30dp"
                       android:layout_marginEnd="20dp"
                       android:layout_height="wrap_content"
                       android:text="Објавено од: Црвен Крст на Република Северна Македонија"
                       android:textColor="#000"
                       android:textSize="15dp"
                       android:textAlignment="gravity"/>

                   <Button
                       android:id="@+id/btnKontaktCardObleka3"
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/txtOblekaOpisCard3"
                       android:layout_toEndOf="@id/txtOblekaObjavaCard3"
                       android:layout_marginTop="40dp"
                       android:layout_marginStart="30dp"
                       android:text="Контакт"
                       android:textSize="20dp"
                       android:textColor="#fff"
                       android:background="@drawable/mybutton"/>

               </RelativeLayout>

           </androidx.cardview.widget.CardView>






       </GridLayout>


   </ScrollView>


</RelativeLayout>