<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="10dp"
    tools:context=".DonirajActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <ImageView
            android:id="@+id/imageViewHrana"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/hrana" />

        <Button
            android:id="@+id/btnHrana"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@+id/imageViewHrana"
            android:background="@drawable/mybutton"
            android:text="Храна"
            android:textColor="#fff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageViewObleka"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/imageViewHrana"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="23dp"
            app:srcCompat="@drawable/obleka" />

        <Button
            android:id="@+id/buttonObleka"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewHrana"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="20dp"
            android:layout_toStartOf="@+id/imageViewObleka"
            android:text="Облека"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/mybutton"/>

        <ImageView
            android:id="@+id/imageViewLekovi"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/imageViewObleka"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/lekovi"
            android:layout_marginStart="20dp"/>

        <Button
            android:id="@+id/btnLekovi"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewObleka"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="117dp"
            android:layout_marginEnd="41dp"
            android:layout_toEndOf="@+id/imageViewLekovi"
            android:background="@drawable/mybutton"
            android:text="Лекови"
            android:textColor="#fff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageViewtehnika"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/imageViewLekovi"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/tehnika" />

        <Button
            android:id="@+id/btnTehnika"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewLekovi"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/imageViewtehnika"
            android:text="Техника"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/mybutton"/>


    </RelativeLayout>

</ScrollView>